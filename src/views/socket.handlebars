<div class="container">
  <h3>Listado de productos:</h3>
  <div id="div-msgs" class="product-list"></div>

  <form id="product-form">
    <div class="form-group">
      <input id="input-msg1" class="form-control" type="text" value="" placeholder="Ingrese nombre" />
    </div>
    <div class="form-group">
      <input id="input-msg2" class="form-control" type="text" value="" placeholder="Ingrese descripción" />
    </div>
    <div class="form-group">
      <input id="input-msg3" class="form-control" type="text" value="" placeholder="Ingrese categoría" />
    </div>
    <div class="form-group">
      <input id="input-msg4" class="form-control" type="text" value="" placeholder="Ingrese estado" />
    </div>
    <div class="form-group">
      <input id="input-msg5" class="form-control" type="text" value="" placeholder="Ingrese precio" />
    </div>
    <div class="form-group">
      <input id="input-msg6" class="form-control" type="text" value="" placeholder="Ingrese thumbnail" />
    </div>
    <div class="form-group">
      <input id="input-msg7" class="form-control" type="text" value="" placeholder="Ingrese código" />
    </div>
    <div class="form-group">
      <input id="input-msg8" class="form-control" type="text" value="" placeholder="Ingrese stock" />
    </div>
    <button onclick="agregarProducto()" class="btn btn-primary">Agregar</button>
  </form>
</div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/socket.js"></script>
</div>

<script id="product-template" type="text/template">
  <div class="product-item">
    <p><strong>Producto:</strong> {{title}}</p>
    <p><strong>Id:</strong> {{id}}</p>
    <p><strong>Precio:</strong> ${{price}}</p>
    <p><strong>Stock:</strong> {{stock}}</p>
    <button class="delete-button btn btn-danger" data-product-id="{{id}}">Eliminar</button>
    <hr />
  </div>
</script>